.my-mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

/* 使用flex布局奇奇怪怪的 */
.my-modal-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 80%;
  background-color: #fff;
  border-radius: 25rpx;
}

.my-modal-btn-wrapper {
  display: block;
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

/* 只有position是最靠谱的 */
.my-cancel-btn, .my-confirm-btn {
  position: absolute;
  top: 0;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
}

.my-cancel-btn {
  left: 0;
}

.my-confirm-btn {
  right: 0;
}

.my-main-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  padding-top: 6rpx;
  font-weight: bold;  
}